<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".TestActivity" >

    <View
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="#000000" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.59"
        android:columnCount="5"
        android:rowCount="7" >

        <TextView
            android:id="@+id/textField1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="60dp"
            android:layout_marginRight="60dp"
            android:text="@string/field"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/textField2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="left|top"
            android:layout_marginBottom="64dp"
            android:layout_row="1"
            android:text="@string/field"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText
            android:id="@+id/textField"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_horizontal"
            android:ems="12"
            android:enabled="true"
            android:inputType="textNoSuggestions" >

            <requestFocus />
        </EditText>

        <TextView
            android:id="@+id/textField4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="left|top"
            android:layout_marginBottom="64dp"
            android:layout_row="2"
            android:text="@string/field"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText
            android:id="@+id/textField5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_horizontal"
            android:ems="12"
            android:enabled="true"
            android:inputType="textNoSuggestions" />

        <TextView
            android:id="@+id/textField6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="left|top"
            android:layout_marginBottom="64dp"
            android:layout_row="3"
            android:text="@string/field"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText
            android:id="@+id/textField7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_horizontal"
            android:ems="12"
            android:enabled="true"
            android:inputType="textNoSuggestions" />

        <TextView
            android:id="@+id/textField8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="left|top"
            android:layout_marginBottom="64dp"
            android:layout_row="4"
            android:text="@string/field"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText
            android:id="@+id/textField9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="center_horizontal|top"
            android:layout_row="4"
            android:ems="12"
            android:enabled="true"
            android:inputType="textNoSuggestions" />

        <EditText
            android:id="@+id/textField10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="center_horizontal|top"
            android:layout_row="0"
            android:ems="12"
            android:enabled="true"
            android:inputType="textNoSuggestions" />

       
        <TextView
            android:id="@+id/textField11"
            android:layout_width="158dp"
            android:layout_column="0"
            android:layout_gravity="left|top"
            android:layout_row="5"
            android:text="@string/field"
            android:textAppearance="@style/AppTheme"
            android:textSize="@dimen/Twenty" />

        <EditText
            android:id="@+id/textField12"
            android:layout_width="248dp"
            android:layout_column="1"
            android:layout_gravity="center_horizontal|top"
            android:layout_row="5"
            android:ems="10"
            android:inputType="textNoSuggestions" />

    </GridLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp" >

        <Button
            android:id="@+id/buttonSubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="234dp"
            android:enabled="true"
            android:onClick="buttonSubmitOnClick"
            android:text="@string/submit" />
    </RelativeLayout>

</LinearLayout>